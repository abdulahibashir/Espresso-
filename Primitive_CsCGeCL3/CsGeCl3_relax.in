&CONTROL
   calculation = 'vc-relax',
   prefix = 'CsGeCl3',
   outdir = './tmp/',
   pseudo_dir = '/home/bashir/all-pseudos/pseudos/',
   tstress = .true.,
   tprnfor = .true.,
   verbosity = 'high'
/

&SYSTEM
   ibrav    = 1,                     ! simple cubic
   celldm(1) = 10.1100,              ! initial guess in Bohr (≈ 5.35 Å)
   nat      = 5,
   ntyp     = 3,
   ecutwfc  = 60.0,                   ! Ry (from convergence)
   ecutrho  = 480.0,                  ! 8 × ecutwfc for USPP
   occupations = 'fixed'
/

&ELECTRONS
   conv_thr    = 1.0d-8,
   mixing_beta = 0.25
/

&IONS
   ion_dynamics = 'bfgs'
/

&CELL
   press = 0.0
/

ATOMIC_SPECIES
  Cs 132.905 Cs_pbe_v1.uspp.F.UPF
  Ge  72.630 ge_pbe_v1.4.uspp.F.UPF
  Cl  35.453 cl_pbe_v1.4.uspp.F.UPF

ATOMIC_POSITIONS crystal
  Cs  0.0 0.0 0.0
  Ge  0.5 0.5 0.5
  Cl  0.5 0.5 0.0
  Cl  0.5 0.0 0.5
  Cl  0.0 0.5 0.5

K_POINTS automatic
 8 8 8 0 0 0
